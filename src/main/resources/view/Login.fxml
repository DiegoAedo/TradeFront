<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="front.trade.controller.LoginController">

    <Label fx:id="titleLabel" text="Iniciar sesión" layoutX="125" layoutY="50" styleClass="title-label"/>
    <TextField fx:id="usernameField" layoutX="100" layoutY="150" promptText="Usuario" prefWidth="200"/>
    <PasswordField fx:id="passwordField" layoutX="100" layoutY="200" promptText="Contraseña" prefWidth="200"/>
    <CheckBox fx:id="chkGuardarContrasena" text="Recordar usuario" layoutX="100" layoutY="250"/>
    <ComboBox fx:id="enviromentComboBox" layoutX="100" layoutY="300" prefWidth="200"/>
    <Button fx:id="loginButton" text="Ingresar" layoutX="100" layoutY="350" prefWidth="200" styleClass="button"/>
    <Label fx:id="errorLabel" layoutX="100" layoutY="400" text="" styleClass="error-label"/>
</AnchorPane>
